# VisionMoto Environment Variables
# Copy this file to .env and fill with your values

# ============================================
# SEGURANÇA (OBRIGATÓRIO EM PRODUÇÃO)
# ============================================
# NUNCA commite este arquivo com valores reais!
# Gere uma chave segura com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# ============================================
# AMBIENTE
# ============================================
# Valores: development, production, testing
FLASK_ENV=development
VISIONMOTO_ENV=development

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=5001
DEBUG=False

# ============================================
# CORS - Origens permitidas (separadas por vírgula)
# ============================================
# Em desenvolvimento: http://localhost:3000,http://localhost:8080
# Em produção: https://app.mottu.com,https://admin.mottu.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Database
# ============================================
DATABASE_PATH=visionmoto_integration.db

# ============================================
# JWT Configuration
# ============================================
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ============================================
# YOLO Model
# ============================================
YOLO_MODEL_PATH=yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5

# ============================================
# MQTT Broker (IoT)
# ============================================
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ============================================
# Logging
# ============================================
# Valores: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================
# Performance
# ============================================
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# ============================================
# Gunicorn (Produção)
# ============================================
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_BIND=0.0.0.0:5001
